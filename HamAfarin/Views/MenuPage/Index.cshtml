@model IEnumerable<DataLayer.Tbl_MenuPage>


@{
    ViewBag.Title = "متقاضی سرمایه";
}


<style>
    #time-3-icon {
        fill: orange;
    }

    .my-svg-alternate {
        display: none;
    }

    .no-svg .my-svg-alternate {
        display: block;
        width: 100px;
        height: 100px;
        background-image: url(image.png);
    }

    .modalBackground {
        background-color: Olive;
        filter: alpha(opacity=70);
        opacity: 0.7;
    }

    .modalPopup {
        background-color: #ffffdd;
        border-width: 3px;
        border-style: solid;
        border-color: Gray;
        padding: 3px;
        width: 250px;
    }
</style>




<!-- banner start -->
<section class="container-fluid p-0">
    <img src="~/Content/img/headerTestBanerImage.jpg" class="w-100" style="max-height:350px" />
</section>



<section class="w-100 font-weight-bold container-tab ">
    <div class="w-100 stickyNav_container">



        <ul class="nav nav-tabs d-flex justify-content-center shadow p-3 mb-2 bg-white rounded stickyNav" id="myTab" role="tablist">
            <div id="btnSarmayeGozariInMenu">

            </div>

            @*<li class="nav-item ml-4">

                    <a class="nav-link stickyNav-item active text-dark font-weight-bold" id="home-tab" data-toggle="tab" href="#home" role="tab"
                       aria-controls="home" aria-selected="true">معرفی طرح</a>
                </li>*@
            <li class="nav-item ml-4">
                <a class="nav-link stickyNav-item text-dark active font-weight-bold" id="financial-tab" data-toggle="tab" href="#financial" role="tab"
                   aria-controls="financial" aria-selected="false">مزایای تأمین سرمایه</a>
            </li>
            <li class="nav-item ml-4">

                <a class="nav-link stickyNav-item  text-dark font-weight-bold" id="home-tab" data-toggle="tab" href="#home" role="tab"
                   aria-controls="home" aria-selected="true">فرایند تقاضای سرمایه</a>
            </li>

            <li class="nav-item ml-4">
