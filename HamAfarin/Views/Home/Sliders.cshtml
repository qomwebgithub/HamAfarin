@model IEnumerable<DataLayer.Tbl_Sliders>

<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @{
            bool first = true;

        }
        @*تغییر فورایچ به فور برای صحولت در شمارش تعداد اسلاید*@
        @for (int c = 0; c < Model.Count(); c++)
        {
            if (first)
            {
                first = false;
                <li data-target="#carouselExampleCaptions" data-slide-to="@c" class="active"></li>
            }
            else
            {
                <li data-target="#carouselExampleCaptions" data-slide-to="@c"></li>
            }
        }
    </ol>
    <div class="carousel-inner">
        @{
            first = true;
        }

        @foreach (var item in Model)
        {

            if (first)
            {
                first = false;
                <div class="carousel-item active">
                    <!-- slider pc -->

                    <img src="~/Images/SliderImages/@item.ImageName" class="hamafarin-slider w-100"
                         alt="@item.Title">
                    <!-- slider mobile -->
                    @*alt="@item.Title" style="height:200px"><img src="~/Images/SliderImages/@item.ImageName" class="d-block d-sm-block d-md-block d-lg-none d-xl-none w-100"*@

                    <div class="carousel-caption d-none d-md-block">
                        <h3>@item.Title</h3>
                        <p>@item.Title</p>
                        @if (item.IsActiveClick1 && item.TitleClick1 != null)
                        {<a href="@item.LinkClick1" class="btn btn-orange m-5">@item.TitleClick1</a>}
                        @if (item.IsActiveClick2 && item.TitleClick2 != null)
                        {<a href="@item.LinkClick2" class="btn btn-orange m-5">@item.TitleClick2</a>}
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <!-- slider pc -->

                    <img src="~/Images/SliderImages/@item.ImageName" class="hamafarin-slider w-100"
                         alt="@item.Title">
                    <!-- slider mobile -->
                    @*<img src="~/Images/SliderImages/@item.ImageName" class="d-block d-sm-block d-md-block d-lg-none d-xl-none w-100"
                        alt="@item.Title" style="height:200px">*@

                    <div class="carousel-caption d-none d-md-block">
                        <h3>@item.Title</h3>
                        <p>@item.Title</p>
                        @if (item.IsActiveClick1 && item.TitleClick1 != null)
                        {<a href="@item.LinkClick1" class="btn btn-orange m-5">@item.TitleClick1</a>}
                        @if (item.IsActiveClick2 && item.TitleClick2 != null)
                        {<a href="@item.LinkClick2" class="btn btn-orange m-5">@item.TitleClick2</a>}
                    </div>
                </div>

            }
        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <img src="~/Content/img/next.svg" class="w-25" />
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <img src="~/Content/img/Previous.svg" class="w-25" />
        <span class="sr-only">Next</span>
    </a>
</div>

