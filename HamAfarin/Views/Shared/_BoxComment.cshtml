@model ViewModels.PlanCommentItemViewModel

@if (Model.Parent_id == null)
{
    <div class="col-12 px-3 py-4 divide-by-line">
        <div class="row">
            <div class="col-12 col-sm-6 col-md-3 text-center border-left">
                <h6>
                    <i class="icon-bubble text-orange"></i>
                    @Model.UserName
                </h6>
                <h6>
                    @Model.CreateDate
                </h6>
            </div>
            <div class="row col-12 col-sm-6 col-md-9">
                <div class="col-12">
                    <p class="text-muted">
                        @Model.CommentText
                    </p>
                </div>
                @if (ViewBag.IsMyAdmin != null)
                {
                    <div class="col-10 col-sm-4 col-md-7">
                        <p class="text-muted">

                        </p>
                    </div>
                    <div class="col-2 text-center">
                        <a href="#" onclick="CreateComment(@Model.CommentID)" class="btn btn-orange my-2">پاسخ</a>
                    </div>
                }
            </div>
            <div class="row">
                @foreach (var item in Model.Tbl_CommentPlan1)
                {
                    @Html.Partial("_BoxComment", item);
                }
            </div>
        </div>
    </div>
}
else
{

    <div class="col-12 col-sm-6 col-md-3 offset-md-1 text-center border-left">
        <h6 class="text-orange">
            پاسخ <i class="icon-bubbles"></i>
        </h6>
        <h6>
            <i class="icon-bubble text-orange"></i>
            @Model.UserName
        </h6>
        <h6>
            @Model.CreateDate
        </h6>
    </div>
    <div class="col-12 col-sm-6 col-md-8">
        <p class="text-muted">
            @Model.CommentText
        </p>
    </div>
}