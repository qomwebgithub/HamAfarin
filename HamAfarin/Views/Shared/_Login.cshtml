            <a class="btn loginIcon dropdown shadow-none px-2" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="bi bi-person-circle"></i>
            </a>
            <div class="dropdown-menu login px-4 py-3" aria-labelledby="dropdownMenuButton">
                @if (UserSetAuthCookie.GetRoleID(User.Identity.Name) == 1)
                {

                    <a href="/Admin" class="btn btn-login-register  " style="color:#b52c26"><i class="bi bi-person-check-fill d-inline"></i> @UserSetAuthCookie.GetUserName(User.Identity.Name)</a>
                }
                else
                {
                    if (UserSetAuthCookie.GetFullName(User.Identity.Name) != null)
                    {
                        <a href="/UserPanel/UserProfile" class="btn btn-login-register" style="color:#b52c26"><i class="bi bi-person-check-fill d-inline"></i> @UserSetAuthCookie.GetFullName(User.Identity.Name)</a>
                    }
                    else
                    {
                        <a href="/UserPanel/UserProfile" class="btn btn-login-register" style="color:#b52c26"><i class="bi bi-person-check-fill d-inline"></i> @UserSetAuthCookie.GetUserName(User.Identity.Name)</a>
                    }

                }
                <span class="text-danger space"> </span>
                <a href="/LogOut" class="btn btn-login-register" style="color:#b52c26"><i class="bi bi-power d-inline"></i> خروج </a>
            </div>
        </div>
        <div class="d-none d-md-block pt-2">پنل کاربری</div>

    </div>
}
