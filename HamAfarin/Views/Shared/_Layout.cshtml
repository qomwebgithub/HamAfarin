<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>سکوی تامین مالی هم آفرین | @ViewBag.Title</title>
    @RenderSection("Tags", false)
    <link href="~/Content/css/bootstrap-rtl.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-reboot-rtl.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-grid-rtl.min.css" rel="stylesheet">
    <link href="~/Content/css/simple-line-icons.css" rel="stylesheet">
    <link href="~/Content/css/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/css/owl.theme.default.min.css" rel="stylesheet">
    <link href="~/Content/css/owl.theme.green.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/animate.css">
    <link href="~/Content/css/responsive.css" rel="stylesheet" />
    <link href="~/Content/css/custom.css" rel="stylesheet">
    <link href="~/Content/css/slides/css/splide.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/css/awesome.css" rel="stylesheet" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link href="~/Content/fonts/bootstarpicon/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/css/aos.css" rel="stylesheet" />
    @RenderSection("Style", false)
    <style>
        #owl-demo .item {
            padding: 30px 0px;
            margin: 10px;
            color: #FFF;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            border-radius: 3px;
            text-align: center;
        }

        .splide__slide img {
            width: 100%;
            height: auto;
        }

        .outer {
            position: relative;
            z-index: 10;
        }

        .inner {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            z-index: 20;
        }
    </style>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-62LY0BZWEH"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-62LY0BZWEH');
    </script>
</head>
<body class="k-rtl">
    @RenderSection("Modal", false)

    <!-- Navigation Start -->
    <section class="d-none d-sm-block container-fluid header-top">
        <div class="container">
            @Html.Action("Header", "Home", new { Area = "" })
        </div>
    </section>
    <!-- Navigation End -->

    <!-- menu start -->
    @Html.Action("Menu", "Home", new { Area = "" })
    <!-- menu end -->

    @RenderBody()

    <!-- footer start -->
    @Html.Action("Footer", "Home", new { Area = "" })
    <!-- footer end -->

    <script src="~/Content/js/jquery-3.5.1.min.js"></script>
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/Content/js/bootstrap.min.js"></script>*@
    <script src="~/Content/js/sweetalert2.all.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/js/jquery-ui.min.js"></script>
    <script src="~/Content/js/custom.js"></script>
    <script src="~/Content/js/aos.js"></script>
    <script src="~/Scripts/jquery.md.bootstrap.datetimepicker.js"></script>
    @RenderSection("Scripts", false)
    <script src="~/Content/js/wow.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/views/custom.js"></script>
    <script src="~/Content/css/slides/js/splide.min.js"></script>
</body>

</html>