
@{
    ViewBag.Title = "VerifyPayment";
}

<div style="background-color:#eaeded">
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 55vh !important">
            <div class="col-12 col-sm-8 m-5" style="font-size:14px;">

                @if (ViewBag.IsSuccess != null)
                {
                    <div class="text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="#28a745" class="bi bi-check-circle-fill mb-4" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                        <h2 class="h2">پرداخت موفق</h2>
                        <br>
                        <h4>تراکنش با موفقیت انجام شد</h4>
                        <br>
                        <h6>
                            کدپیگیری : @ViewBag.TransactionReferenceID
                        </h6>
                        <br>
                        <a href="/" class="btn btn-outline-success">بازگشت</a>
                    </div>
                }
                else
                {

            <div class="text-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="#dc3545" class="bi bi-x-circle-fill mb-4" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                </svg>
                <h2 class="h2">تراکنش ناموفق</h2>
                <br>
                <h4>تراکنش با شکست مواجه شد</h4>
                <h6>برای کسب اطلاعات بیشتر با کارشناس پشتیبانی تماس بگیرید.</h6>
                <br>
                <a href="/" class="btn btn-outline-danger">بازگشت</a>
            </div>
                }
            </div>
        </div>
    </div>
</div>