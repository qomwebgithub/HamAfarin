@model IEnumerable<DataLayer.Tbl_Dargah>

<div class="col-12">
    <div class="row">
        <div class="row justify-content-start col-sm form-check">
            <p class="text-nowrap col-12 col-md-3 text-bold mb-0" style=" line-height: 2.4;">انتخاب درگاه پرداخت:</p>
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-3 px-0">
                    <div class="form-check form-check-inline" style="margin:8px">
                        <input class="form-check-input"
                               type="radio"
                               name="dargah"
                               id="@item.Name"
                               value="@item.ID" @item.Checked />
                        <label class="form-check-label" for="dargah">@item.Title</label>
                    </div>
                </div>
            }
        </div>
    </div>
</div>