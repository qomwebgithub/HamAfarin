@model ViewModels.InvestmentsReportViewModel

@{
    ViewBag.Title = "گزارش سرمایه گذاری ها";
}

@section Style
{
    <link href="~/Content/css/datatables.min.css" rel="stylesheet" />
    <style>
        input, select {
             max-width: unset; 
        }
    </style>
}

<h5 class="mb-4">@ViewBag.Title</h5>

<div class="form-row">
    <div class="form-group col-md-6">
        <label for="PlansList">نام طرح</label>
        <select class="form-control" id="PlansList">
            <option>انتخاب کنید...</option>
            @foreach (var plan in Model.PlansList)
            {
                <option value="@plan.PlanID">@plan.PlanName</option>
            }
        </select>
    </div>
    <div class="form-group col-md-6">
        <label for="InvestmentReportTypes">نوع واریز</label>
        <select class="form-control" id="InvestmentReportTypes">
            <option>انتخاب کنید...</option>
            @foreach (var type in Model.InvestmentReportTypes)
            {
                <option value="@type.TypeID">@type.TypeName</option>
            }
        </select>
    </div>
    @*<div class="form-group col-md-4">
        <label for="investDate">تاریخ</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <button class="btn btn-primary" id="investDateYMD" type="button">انتخاب</button>
            </div>
            <input type="text" class="form-control" id="investDate" placeholder="1400" style="direction:rtl;">
        </div>
    </div>*@
    @*<div class="form-group col-md-3">
            <button class="btn btn-block btn-orange" onclick="tableChange()">جستجو</button>
        </div>*@
</div>
<table id="investments" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark">
        <tr class="table-info">
            <th>ردیف</th>
            <th>نوع تراکنش</th>
            <th>تاریخ</th>
            <th>مبلغ</th>
            <th>نام طرح</th>
        </tr>
    </thead>
</table>

@section Scripts
{
    <script src="~/Content/js/datatables.min.js"></script>
    <script>
        //لود جدول
        $(loadDataTable());

        //فیلتر جدول
        $('#PlansList,#InvestmentReportTypes').change(function () {
            t.ajax.reload();
        });

        //جدول
        function loadDataTable() {
            t = $('#investments').DataTable({
                ajax: {
                    url: "/UserPanel/InvestmentsReport/Investments",
                    type: "get",
                    dataType: "json",
                    data: {
                        "planId": function () { return parseInt($('#PlansList').val()) },
                        "typeId": function () { return parseInt($('#InvestmentReportTypes').val()) },
                    },
                },
                columns: [
                    { "data": null },
                    { "data": "TypeName" },
                    { "data": "DateString" },
                    { "data": "Amount", render: $.fn.dataTable.render.number(',') },
                    { "data": "PlanName" },
                ],
                language: {
                    "lengthMenu": "تعداد در هر صفحه _MENU_",
                    "zeroRecords": "متاسفانه اطلاعاتی یافت نشد",
                    "info": "نمایش صفحه _PAGE_ از _PAGES_",
                    "infoEmpty": "اطلاعاتی در جدول یافت نشد",
                    "infoFiltered": "(فیلتر شده از _MAX_ اطلاعات)",
                    "paginate": {
                        "first": "اول",
                        "last": "آخر",
                        "next": "بعدی",
                        "previous": "قبلی"
                    },
                    "search": "جستجو ",
                    "loadingRecords": "در حال بارگزاری اطلاعات...",
                    "emptyTable": "اطلاعاتی در جدول یافت نشد",
                },
                "order": [[1, "desc"]]
            });

            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        }
    </script>

}
