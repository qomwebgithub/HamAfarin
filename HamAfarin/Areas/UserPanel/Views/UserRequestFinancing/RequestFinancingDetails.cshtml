@model ViewModels.UserRequestFinancingViewModel

@{
    ViewBag.Title = "تقاضای سرمایه";
}
<body>
    <h4 class="pb-3">درخواست تامین مالی </h4>
    <div class="col-12" style="font-size:13px">
        <div class="row">
            <div class="col-6 col-xl-2 xol-lg-2 col-md-3 pl-0">
                <span class="font-weight-normal">وضعیت درخواست :</span>
            </div>
            <span>
                @Model.Status
            </span>
        </div>
    </div>
    <hr />
    <div class="form-horizontal pt-3" style="font-size:13px">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        @Html.DisplayFor(model => model.Title)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-6" })
                    <div class="col-md-12">
                        @Html.DisplayFor(model => model.Description)
                    </div>
                </div>
                <div class="form-group">
                    <span class="control-label col-md-6"> فایل مدارک </span>
                    <div class="col-md-12">
                        <a class="btn btn-success" href="@Model.DocumentFile">دانلود فایل مدارک</a>
                    </div>
                </div>
                @if (Model.Status_id != 2)
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.DescriptionAdmin, new { @class = "control-label col-md-6" })
                        <div class="col-md-12">
                            @Html.DisplayFor(model => model.DescriptionAdmin)
                        </div>
                    </div>
                }

                <div class="form-group row" id="buttons">
                    <div class="d-md-block d-sm-none col-md-6">
                    </div>
                    <a href="/UserPanel/UserRequestFinancing" class="col-12">
                        <span class="bi bi-arrow-right-circle"></span><span class="mb-3">  بازگشت به لیست</span>
                    </a>
                </div>
            </div>
        </div>
        <br />
    </div>
</body>

