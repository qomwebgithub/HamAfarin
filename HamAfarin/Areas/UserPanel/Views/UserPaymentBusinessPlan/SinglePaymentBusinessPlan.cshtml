                                        <span class="text-muted h6 small text-center">درصد تامین شده</span>
                                        <p class="mb-0 small font-weight-bold text-center">
                                            @Model.PercentageComplate%
                                        </p>
                                    </div>
                                    <div class="align-items-center col-12 col-lg-2 col-md-3 col-sm-3 col-xl-3 d-flex justify-content-center">
                                        <div class="d-block d-md-none" id="btnSarmayeGozari">
                                            @if (Model.RemainingTime < 0)
                                            {
