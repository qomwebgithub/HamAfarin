<body>
    <div class="container p-0">
        <!-- Start of New -->

        <div class="row pb-2">
            <div class="col-6">
                <h4>سرمایه گذاری من</h4>
            </div>
            <div class="col-6">
                <a href="/UserPanel/UserPaymentBusinessPlan" style="font-size: 12px;" class="btn btn-danger float-left">بازگشت</a>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-4">
                <p class="small">سرمایه شما <span class="text-success pr-1">@Model.BusinessPlanPayment.ToString("#,##0")</span> تومان</p>
            </div>
            <div class="col-12 col-md-4">
                <p class="small">سود شما <span class="text-success pr-1">0</span> تومان</p>
            </div>
            <div class="col-12 col-md-4">
                <p class="small">جمع کل سرمایه <span class="text-success pr-1">@ViewBag.TotalPayment.ToString("#,##0")</span> تومان</p>
            </div>
        </div>
        <hr />
        <!-- banner start -->
        <section class="container-fluid mt-0 p-0">
            <img src="~/Images/BusinessPlans/Image/@Model.ImageName" class="w-100" style="max-height:350px; min-height:200px;" />
            <div class="col-12 d-sm-none" style="height:70px"></div>
        </section>
        <!-- banner end -->
        <!-- after banner start -->
        <section class="container-fluid bg-light">
            <div class="container-xl container-lg position-relative">
                <div class="row d-flex justify-content-center">
                    <div class="col-10 col-sm-10 col-md-10 col-lg-10 col-xl-10 center-panel" style="top:-70px" data-aos="fade-uo" data-aos-once="true">

                        <div class="row text-align-center">
                            <div class=" d-none d-md-flex align-items-center col-12 col-lg-3 col-md-3 col-sm-3 col-xl-3  justify-content-center">
                                <div id="btnSarmayeGozari">
                                    @if (Model.RemainingTime < 0)
                                    {
                                        if (Model.PercentageComplate >= 100)
                                        {
                                            <a class="btn btn-orange btn-lg" style="font-size: 15px;" onclick="AlertInvestment('سرمایه لازم برای این طرح تکمیل شده است. مشاهده و سرمایه گذاری در سایر طرح ها')">
                                                تکمیل شده <i class="bi bi-check2-circle"></i>
                                            </a>
                                        }
                                        else
                                        //'فرصت سرمایه گذاری در این طرح به اتمام رسده است .<br/>می توانید در طرح های دیگر سرمایه گذاری کنید'
                                        {
                                            <a class="btn btn-orange btn-lg" style="font-size: 15px;" onclick="AlertInvestment('فرصت سرمایه گذاری در این طرح به اتمام رسده است .می توانید در طرح های دیگر سرمایه گذاری کنید')">
                                                فرصت تمام شده<i class="bi bi-check2-circle"></i>
                                            </a>
                                        }
                                    }
                                    else if (Model.IsSuccessBussinessPlan)
                                    {
                                        <a class="btn btn-orange btn-lg" style="font-size: 15px;">
                                            تکمیل شده <i class="bi bi-check2-circle"></i>
                                        </a>
                                    }
                                    else if (Model.IsAcceptInvestment || Model.IsOverflowInvestment)
                                    {
                                        <a href="/Payment/SelectPaymentType/@Model.BusinessPlanID" class="btn btn-orange btn-lg" style="font-size: 15px;">
                                            سرمایه گذاری میکنم <i class="bi bi-check2-circle"></i>
                                        </a>
                                    }

                                    else
                                    {
                                        <a class="btn btn-orange btn-lg" style="font-size: 15px;" onclick="AlertInvestment('سرمایه لازم برای این طرح تکمیل شده است. مشاهده و سرمایه گذاری در سایر طرح ها')">
                                            تکمیل شده <i class="bi bi-check2-circle"></i>
                                        </a>
                                    }
                                </div>

                            </div>

                            <div class="col-12 col-sm-9 col-md-9 col-lg-9 col-xl-9">
                                @*دونسخه موجود در مبایل و دکستاپ*@
                                <div class=" d-none d-md-block col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                    <div class="mt-1 float-right text-right">
                                        <span class="d-block text-muted text-nowrap h6 small">
                                            مبلغ هدف (تومان)
                                        </span>
                                        <strong>
                                            @Convert.ToDecimal(Model.AmountRequiredRoRaiseCapital).ToString("#,##0")
                                        </strong>
                                    </div>
                                    <div class="mt-1 float-left text-left">
                                        <span class="d-block text-muted text-nowrap h6 small">
                                            سرمایه تامین شده (تومان)
                                        </span>
                                        <strong>
                                            @Model.PriceComplated.ToString("#,##0")
                                        </strong>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="mb-3 mb-md-0 col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 my-2">
                                    <div class="progress flex-row-reverse">
                                        @{ if (Model.PercentageComplate == 100)
                                            {
                                                <div class="progress-bar" role="progressbar" style="background-color:#62be7f ;width: @Model.WidthPercentage"
                                                     aria-valuenow="@Model.PercentageComplate" aria-valuemin="0" aria-valuemax="100"></div>
                                            }
                                            else if (Model.PercentageComplate > 100)
                                            {

                                                int up100 = @Model.PercentageComplate - 100;
                                                string strUp100 = up100 + "%";
                                                <div class="progress-bar outer" role="progressbar" style="background-color:#3b9c59 ;width: @Model.WidthPercentage"
                                                     aria-valuenow="@Model.PercentageComplate" aria-valuemin="0" aria-valuemax="100">

                                                    <div class="progress-bar inner" role="progressbar" style="background-color:#3b6659 ;width: @strUp100"
                                                         aria-valuenow="@Model.PercentageComplate" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.WidthPercentage"
                                                     aria-valuenow="@Model.PercentageComplate" aria-valuemin="0" aria-valuemax="100"></div>
                                            }
                                        }
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="offset-xl-1 offset-lg-1"></div>
                                    @*دونسخه موجود در مبایل و دکستاپ*@

                                    <div class="mb-3 mb-md-0 px-0 d-block d-md-none col-xl-2 col-6 col-sm-6 col-md-3 col-lg-2 border-left text-center text-align-center">
                                        <span class="d-block text-muted h6 small">
                                            مبلغ هدف (تومان)
                                        </span>
                                        <strong>
                                            @Convert.ToDecimal(Model.AmountRequiredRoRaiseCapital).ToString("#,##0")
                                        </strong>
                                    </div>

                                    <div class="mb-3 mb-md-0 px-0 d-block d-md-none d-sm-block col-xl-2 col-6 col-sm-6 col-lg-2 border-left text-align-center">
                                        <span class="d-block text-muted h6 small">
                                            سرمایه تامین شده (تومان)
                                        </span>
                                        <strong>
                                            @Model.PriceComplated.ToString("#,##0")
                                        </strong>
                                    </div>
                                    <div class="mb-3 mb-md-0 px-0 col-xl-2 col-6 col-sm-6 col-md-3 col-lg-2 border-left text-center">
                                        <span class="text-muted h6 small">زمان باقی مانده</span>
                                        @{ if (Model.RemainingTime == 0)
                                            {
                                                <p class="mb-0 small text-danger font-weight-bold text-center">
                                                    روز پایانی
                                                </p>
                                            }
