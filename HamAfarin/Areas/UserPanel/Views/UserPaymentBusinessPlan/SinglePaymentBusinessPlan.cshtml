    <script>

        function ReurnedPayment() {
            $.ajax({
                url: "/UserPanel/PaymentReturned/DoReturnedPayment?paymentId="+@Model.PaymentID+"&planId="+@Model.BusinessPlanID,
                type: "Get"
            }).done(function (result) {
                 $("#myModalLabel").html("انصراف از سرمایه گذاری");
                $("#myModalBody").html(result);
                $("#returnModal").modal();

               $(".modal-backdrop").each(function(){
            $(this).removeClass("modal-backdrop");
               });
                    });
                }

        function Success() {
            $("#returnModal").modal('hide');
            //alert("با موفقیت انجام شد");
            Swal.fire({
                icon: 'success',
                title: 'با موفقیت انجام شد',
                confirmButtonText: `باشه`,
                confirmButtonColor: '#d0aa45',
            }).then((result) => {
                if (result.isConfirmed) {
                    location.reload();
                } else {
                    location.reload();
                }
            });
        }

        function partnershipCertificate() {
            Swal.fire({
                icon: 'warning',
                title: 'توجه',
                text: "سرمایه گذار محترم پس از تکمیل موفق سرمایه طرح و تایید سازمان محترم فرابورس از طریق سامانه پیامکی هم آفرین به شما اطلاع رسانی می شود و گواهی شراکت قابل دانلود می گردد",
                confirmButtonText: `قبول`,
                confirmButtonColor: '#d0aa45',
            });
        }


        function AlertInvestment(message) {
            Swal.fire({
                icon: 'warning',
                title: 'توجه',
                text: message,
                confirmButtonText: `قبول`,
                confirmButtonColor: '#d0aa45',
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/BusinessPlans";
                }
            });
        }

        if (@ViewBag.Notify.ToString().ToLower()) {
            Swal.fire({
                icon: 'info',
                title: 'توجه',
                text: 'شما می توانید در هر زمانی با استفاده از دکمه چاپ قرارداد، قرارداد خود را دانلود یا چاپ نمایید.',
                confirmButtonText: `باشه`,
                confirmButtonColor: '#d0aa45',
            })
        }

        function inputCheck() {
            let button = document.querySelector("#CancelPaymentBtn");
            let input = document.querySelector("#CancelPaymentInput");
            if (input.value === "") {
                button.disabled = true;
            } else {
                button.disabled = false;
            }
        };

        // بستن مودال با دکمه بک در گوشی
        if (window.history && window.history.pushState) {
            $('#privacyModal').on('show.bs.modal', function (e) {
                window.history.pushState('forward', null, '#modal');
            });

            $(window).on('popstate', function () {
                $('#privacyModal').modal('hide');
            });
        }

    </script>

}

