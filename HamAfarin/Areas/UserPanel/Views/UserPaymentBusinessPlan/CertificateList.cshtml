@model IEnumerable<ViewModels.ProjectParticipationViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>گواهی شراکت ها</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.CreateDate)</th>
            <th>@Html.DisplayNameFor(model => model.PaymentPrice)</th>
            <th>@Html.DisplayName("چاپ گواهی شراکت")</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => item.Title)</td>
            <td>@Html.DisplayFor(model => item.CreateDate)</td>
            <td>@Html.DisplayFor(model => item.PaymentPrice)</td>
            <td>
                <a style="font-size:14px" id="CertificateRdy" class="btn btn-orange user-payment-btn float-left" href="/UserPanel/UserPaymentBusinessPlan/ProjectParticipationPDF/@item.PaymentID">
                    <span> چاپ گواهی شراکت</span>
                </a>
            </td>
        </tr>
    }
</table>
