﻿<!-- sidebar menu start-->

<ul class="feedlist mb-0">
    <li class="p-3" style="font-size:16px">
        <a href="/UserPanel/UserProfile" style="text-decoration:none;color: #81858b;">
            @if (UserSetAuthCookie.GetFullName(User.Identity.Name) != null)
            {
                <i class="glyphicon glyphicon-user"></i>@UserSetAuthCookie.GetFullName(User.Identity.Name)
            }
            else
            {
                <i class="glyphicon glyphicon-user"></i>@UserSetAuthCookie.GetMobileNumber(User.Identity.Name)
            }
        </a>
    </li>
    @if (UserSetAuthCookie.GetHasSejam(User.Identity.Name) == false)
    {
        <li class="pr-2 pl-2" style="font-size:16px">
            <div class="col-12">
                <a href="/Account/SejamLogin" class="btn btn-danger" style="background-color:#ff1654"> دریافت اطلاعات از سجام </a>
            </div>
        </li>
    }

    @if (ViewBag.UserStatus != null)
    {
        <li class="border-bottom pb-2 pr-2 pl-2">
            <div class="col-12">
                <a style="font-size:14px" href="/BusinessPlans" class="btn btn-orange">شروع سرمایه گذاری</a>
            </div>
        </li>
    }

    @*<li><a href="/UserPanel" class="link_active"><i class="glyphicon glyphicon-dashboard"></i> داشبورد </a></li>*@

    <li>
        <div class="panel-group" id="accordionMenu" role="tablist" aria-multiselectable="true">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="headingTwo">
                    <h4 class="panel-title">
                        <a class="collapsed" style="color: #81858b;" role="button" data-toggle="collapse" data-parent="#accordionMenu" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span> منو
                        </a>
                    </h4>
                </div>
                <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                    <div class="panel-body">
                        <ul class="nav">
                            <li class="pr-3"><a href="/UserPanel/UserPaymentBusinessPlan" style="text-decoration:none;color: #81858b;"><i class="glyphicon glyphicon-usd"></i>سرمایه گذاری من </a></li>
