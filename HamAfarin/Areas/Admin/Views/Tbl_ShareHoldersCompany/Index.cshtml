@model IEnumerable<DataLayer.Tbl_ShareHoldersCompany>
@using Kendo.Mvc.UI;

@{
    ViewBag.Title = "فهرست سهامداران";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@(Html.Kendo().Grid(Model)
      .Name("Grid")
      .Columns(columns =>
          {
          columns.Bound(item => @item.ShareHolderID).Title("تصویر").Filterable(false).Groupable(false)
                            .Template(@<text>
                            <img src="~/Images/ShareHolders/Logo/@item.LogoIcon" class="thumbnail" style="max-width:200px" />
                            </text>);
  columns.Bound(model => model.ShareHolderTitle);
columns.Bound(model => model.Description);
columns.Bound(model => model.IsActive);
columns.Bound(item => @item.ShareHolderID).Title("دستورات").Filterable(false).Groupable(false)
      .Template(@<text>
                        @Html.ActionLink("ویرایش", "Edit", new { id = @item.ShareHolderID }, new { @class = "k-button k-button-icontext k-grid-Edit" })
                        @Html.ActionLink("حذف", "Delete", new { id = @item.ShareHolderID }, new { @class = "k-button k-button-icontext k-grid-Delete" })
    </text>).Width(200);
})
.ToolBar(toolbar =>
{
toolbar.Custom().Action("Create", "Tbl_ShareHoldersCompany").Text("افزودن");
}
)
.Groupable()
.Pageable()
.Sortable()
.Filterable()
.DataSource(dataSource => dataSource
.Server()

.Model(model => model.Id(item => item.ShareHolderID))
)
)
