@model DataLayer.Tbl_BusinessPlanPayment

@{
    ViewBag.Title = "حذف پرداختی موردنظر";
}


<h3 class="text-danger">آیا از حذف این مورد اطمینان دارید؟</h3>
<div>

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.IsPaid)
        </div>
        <div class="card-body col-12">
            @Html.DisplayFor(model => model.IsPaid)

        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.IsConfirmedFromAdmin)
        </div>
        <div class="card-body col-12">
            @Html.DisplayFor(model => model.IsConfirmedFromAdmin)

        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.PaidDateTime)
        </div>
        <div class="card-body col-12">
            @Html.DisplayFor(model => model.PaidDateTime)

        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.TransactionPaymentCode)
        </div>
        <div class="card-body col-12">
            @Html.DisplayFor(model => model.TransactionPaymentCode)

        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.PaymentPrice)
        </div>
        <div class="card-body">
            <p class="card-text">
                @Html.DisplayFor(model => model.PaymentPrice)
            </p>
        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            نوع پرداخت
        </div>
        <div class="card-body">
            <p class="card-text">
                @Html.DisplayFor(model => model.Tbl_PaymentType.PaymentTitle)
            </p>
        </div>
    </div>
    <br />

    @{ if (Model.PaymentType_id == 3)
        {

            <div class="card">
                <div class="card-header">
                    تصویر فیش واریزی
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <img src="~/Images/PaymentImages/@Model.PaymentImageName" />
                    </p>
                </div>
            </div>
            <br />

        }}
    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.Tbl_PaymentType.PaymentTitle)
        </div>
        <div class="card-body col-12">
            @Html.DisplayFor(model => model.Tbl_PaymentType.PaymentTitle)

        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            کاربر پرداخت کننده
        </div>
        <div class="card-body col-12">
            @Html.DisplayFor(model => model.Tbl_Users1.UserName)

        </div>
    </div>
    <br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="تایید حذف" class="btn btn-danger" />
                @Html.ActionLink("بازگشت به فهرست", "Index")
            </div>
        </div>
    }
</div>
