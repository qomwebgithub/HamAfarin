@using Kendo.Mvc.UI
@{
    ViewBag.Title = "افزودن " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
}

<h2>افزودن @Html.DisplayNameFor(model => model)</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <p class="text-danger">
            @ViewBag.Error
        </p>
        <div class="form-group">
            <label class="control-label col-12" for="FaraboorsProjectId">آی دی پروژه فرابورس</label>
            <div class="col-md-10">
                <input type="text" name="faraboorsProjectId"/>
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
                @Html.ActionLink("بازگشت به فهرست", "Index")
            </div>
        </div>
    </div>
}
