@model DataLayer.Tbl_Blog


<div class="card-header">
    <h2>حذف خبر</h2>
</div>

<br />

<h3>آیا از حذف این مورد اطمینان دارید؟</h3>
<div>
    <hr />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.IsActive)
        </div>
        <div class="card-body col-12">
            @Html.DisplayFor(model => model.IsActive)

        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.Title)
        </div>
        <div class="card-body col-12">
            @Html.DisplayFor(model => model.Title)

        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.MetaTitle)
        </div>
        <div class="card-body col-12">
            @Html.DisplayFor(model => model.MetaTitle)

        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.Description)
        </div>
        <div class="card-body col-12">
            @Html.DisplayFor(model => model.Description)

        </div>
    </div>
    <br />

    @if (Model.ImageName != null)
    {
        <div class="card">
            <div class="card-header">
                @Html.DisplayNameFor(model => model.ImageName)
            </div>
            <div class="card-body col-12">
                <img src="~/Images/BlogImages/Thumb/@Model.ImageName" />

            </div>
        </div>
        <br />
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="تایید حذف" class="btn btn-danger" />
                @Html.ActionLink("بازگشت به فهرست", "Index")
            </div>
        </div>
    }
</div>
