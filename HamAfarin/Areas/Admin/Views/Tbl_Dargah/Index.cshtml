@model IEnumerable<DataLayer.Tbl_Dargah>
@using Kendo.Mvc.UI;

@{
    ViewBag.Title = "فهرست درگاه پرداخت";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

        @(Html.Kendo().Grid(Model)
              .Name("Grid")
              .Columns(columns =>
                  {
                  columns.Bound(model => model.IsActive);
        columns.Bound(model => model.Title);
        columns.Bound(model => model.Name);
        columns.Bound(model => model.CreateDate);
        columns.Bound(model => model.Checked);
					columns.Bound(item => @item.ID).Title("دستورات").Filterable(false).Groupable(false)
							.Template(@<text>
									@Html.ActionLink("ویرایش", "Edit", new {id = @item.ID}, new {@class = "k-button k-button-icontext k-grid-Edit"})
									</text>).Width(200);  
		})
		.Groupable()
		.Pageable()
		.Sortable()
		.Filterable()              
		.DataSource(dataSource => dataSource
									.Server()
							
									.Model(model => model.Id(item => item.ID))
					)              
	)
