@model ViewModels.AddEditSliderViewModel
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "ویرایش اسلایدر";
}


<div class="card-header">
    <h2>@ViewBag.Title</h2>
</div>


@using (Html.BeginForm("Edit", "Tbl_Sliders", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.SliderID)
    @Html.HiddenFor(model => model.ImageName)



    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.TitleClick1)
        </div>
        <div class="card-body">
            @Html.EditorFor(model => model.TitleClick1)
            @Html.ValidationMessageFor(model => model.TitleClick1)
        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.LinkClick1)
        </div>
        <div class="card-body">
            @Html.EditorFor(model => model.LinkClick1)
            @Html.ValidationMessageFor(model => model.LinkClick1)
        </div>
    </div>
    <br />
    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.IsActiveClick1)
        </div>
        <div class="card-body">
            @Html.EditorFor(model => model.IsActiveClick1)
            @Html.ValidationMessageFor(model => model.IsActiveClick1)
        </div>
    </div>
    <br />
    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.TitleClick2)
        </div>
        <div class="card-body">
            @Html.EditorFor(model => model.TitleClick2)
            @Html.ValidationMessageFor(model => model.TitleClick2)
        </div>
    </div>
    <br />
    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.LinkClick2)
        </div>
        <div class="card-body">
            @Html.EditorFor(model => model.LinkClick2)
            @Html.ValidationMessageFor(model => model.LinkClick2)
        </div>
    </div>
    <br />
    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.IsActiveClick2)
        </div>
        <div class="card-body">
            @Html.EditorFor(model => model.IsActiveClick2)
            @Html.ValidationMessageFor(model => model.IsActiveClick2)
        </div>
    </div>
    <br />
    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.IsActive)
        </div>
        <div class="card-body">
            @Html.EditorFor(model => model.IsActive)
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>
    </div>
    <br />


    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.Title)
        </div>
        <div class="card-body">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.ImageName)
        </div>
        <div class="card-body">
            @Html.Kendo().Upload().Name("imgup")
            @Html.ValidationMessageFor(model => model.ImageName)
        </div>
    </div>
    <br />

    <img style="max-width: 500px" class="thumbnail" src="~/Images/SliderImages/@Model.ImageName" />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.Url)
        </div>
        <div class="card-body">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.IsShowHomePage)
        </div>
        <div class="card-body">
            @Html.EditorFor(model => model.IsShowHomePage)
            @Html.ValidationMessageFor(model => model.IsShowHomePage)
        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-header">
            @Html.DisplayNameFor(model => model.InMobile)
        </div>
        <div class="card-body">
            @Html.EditorFor(model => model.InMobile)
            @Html.ValidationMessageFor(model => model.InMobile)
        </div>
    </div>
    <br />


    <div id="pageTitle" class="form-group hidden">
        <div class="col-md-2">
        </div>
        <div class="col-md-10">
            @Html.LabelFor(model => model.Page_Title)
            @Html.DropDownList("Page_id")
            @Html.ValidationMessageFor(model => model.Page_Title)
        </div>
    </div>

    <hr />

    <div class="form-group" id="buttons">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="بروزرسانی" class="btn btn-success" />
            @Html.ActionLink("بازگشت به فهرست", "Index")
        </div>
    </div>
</div>
}


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@section Scripts{
    <script src="~/Areas/UserPanel/Content/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            handlePageTitle($("#IsShowHomePage").is(':checked'))
            $('#IsShowHomePage').change(function () {
                handlePageTitle(this.checked)
            });

        });

        function handlePageTitle(checked) {
            if (checked) {
                $('#pageTitle').hide();
            }
            else {
                $('#pageTitle').show();
            }
        };


    </script>
}
