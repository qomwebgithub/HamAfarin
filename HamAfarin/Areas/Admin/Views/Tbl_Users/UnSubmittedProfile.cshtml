@model IEnumerable<ViewModels.ProfileItemViewModel>
@using Kendo.Mvc.UI

@{
    ViewBag.Title = "فهرست پروفایل های تایید نشده";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@(Html.Kendo().Grid(Model)
.Name("Grid")
.Columns(columns =>
{
columns.Bound(model => model.MobileNumber);
columns.Bound(model => model.Name);
columns.Bound(model => model.UserName);
columns.Bound(model => model.Gender);
columns.Bound(model => model.IsLegal);
columns.Bound(item => @item.ProfileID).Title("دستورات").Filterable(false).Groupable(false)
              .Template(@<text>
            @Html.ActionLink("ویرایش", "EditProfile", new { id = @item.ProfileID }, new { @class = "k-button k-button-icontext k-grid-Edit" })
            @Html.ActionLink("حذف", "DeleteProfile", new { id = @item.ProfileID }, new { @class = "k-button k-button-icontext k-grid-Delete" })
            </text>).Width(200);
})
.Groupable()
.Pageable()
.Sortable()
.Filterable()
.DataSource(dataSource => dataSource
.Server()

.Model(model => model.Id(item => item.ProfileID))
)
)
